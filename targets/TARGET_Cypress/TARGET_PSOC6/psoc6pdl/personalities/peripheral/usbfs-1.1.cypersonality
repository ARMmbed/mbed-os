    <!-- INTR_LVL initialization define -->
    <ParamString id="INTR_LVL_SEL" name="INTR_LVL_SEL"  group="Internal" default="(CY_USBFS_DEV_DRV_SET_SOF_LVL(`${sofIntr}`) | \&#xA;
                CY_USBFS_DEV_DRV_SET_BUS_RESET_LVL(`${busResetIntr}`) | \&#xA;
